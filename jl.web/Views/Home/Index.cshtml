@using JL.Infrastructure;
@{
    ViewBag.Title = "Home Page";
}

<!--新品推荐-->
<div class="container">
    <div class="text-center">
        <h3 class="text-moduletitle">新品推荐</h3>
        <p>NEW PRODUCT</p>
    </div>

    <div class="row">
        @foreach (var product in ViewBag.RecommendProducts)
        {
            <div class="col-sm-4 col-md-3">
                <a href="@Url.Action("detail","product",new { id = product.AutoId })" class="thumbnail">
                    <img src="@JL.Web.Helpers.ImageHelper.GenPictureUrlMiddle(product.Picture,PictureEnums.Product)" alt="">
                </a>
            </div>
        }
    </div>
</div>

<!--关于我们-->
<div class="jumbotron" style="background-image: url('http://bk.image.styleweb.com.cn/2017/7/13/13039_j521ec58.png?imageMogr2/thumbnail/2000x2000/q/100');background-attachment:fixed">
    <div class="container">
        <div class="text-center">
            <h3 class="text-moduletitle">关于我们</h3>
            <p>ABOUT US</p>
            <p class="text-muted">
                自成立以来，公司坚持以人为本，重视人才培养，拥有一支富有新营销理念、市场拓展能力强的商务团队； 经验丰 富、学历层次高的技术研发团队； 新闻敏感度高、采编经验丰富的编辑团队。
            </p>
        </div>        
    </div>
</div>

<!--产品中心-->
<div class="container">
    <div class="text-center">
        <h3 class="text-moduletitle">产品中心</h3>
        <p>PRODUCT CENTER</p>
    </div>

    <div class="row">
        @foreach (JL.Core.Models.Product product in ViewBag.ProductCenter)
                    {
            <div class="col-sm-6 col-md-6">
                <div class="media margin-box">
                    <div class="media-left media-img-box" style="">
                        <a href="@Url.Action("detail","product",new { id = product.AutoId })" class="pull-left">
                            <img src="@JL.Web.Helpers.ImageHelper.GenPictureUrlSmall(product.Picture,PictureEnums.Product)" alt="">
                        </a>
                    </div>

                    <div class="media-body">
                        <h4 class="media-heading">@product.Name</h4>
                        <p>@product.BriefIntroduction.Intercept(60)</p>

                        <p>零售价：@product.RetailPrice</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
