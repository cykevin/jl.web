<!--团队中心-->
<!--关于我们-->
<div class="text-center">
    <h3 class="text-moduletitle">团队中心</h3>
    <p>Team</p>
</div>

<div class="jumbotron">
    <div class="container">        
        <div class="row">
            @foreach (JL.Core.Models.Member member in ViewBag.Members)
            {
                <div class="col-sm-3 col-md-3">
                    <div class="thumbnail">
                        <a href="@Url.Action("detail","member",new { id = member.AutoId })">
                            <img src="@JL.Web.Helpers.ImageHelper.GenPictureUrlMiddle(member.Picture,PictureEnums.Member)" alt="">
                        </a>
                        <div class="caption">
                            <h4 class="text-moduletitle text-center">@member.NickName</h4>
                            <p class="text-center">@member.Description.Intercept(20)</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!--资讯中心-->

<div class="container">
    <div class="text-center">
        <h3 class="text-moduletitle">资讯中心</h3>
        <p>NEWS</p>
    </div>
    <div class="row col-no-padding">
        @foreach (JL.Core.Models.Article article in ViewBag.Articles)
        {
            <div class="col-sm-3 col-md-3">
                
                    <a href="@Url.Action("detail","skincare",new { id = article.AutoId })" class="thumbnail">
                        <img src="@JL.Web.Helpers.ImageHelper.GenPictureUrlMiddle(article.Picture,PictureEnums.Article)" alt="">
                    </a>                
            </div>
        }
    </div>    
</div>


@section styles{
    <style type="text/css">
        .text-moduletitle {
            color:#42BCDB;
        }
        .media-body h4 {
            margin-bottom: 14px;
            font-weight: normal;
            font-size: 16px;
            color: #42BCDB;
        }
        .media-img-box {
            width: 22%;
            margin-right: 14px;
            display: table-cell;
            vertical-align: middle;
        }
        .caption p{
            font-size:16px;
        }
        .margin-box {
            border: 1px solid rgb(216,216,216);
            padding: 5%;
            margin-bottom: 20px;
            height:0px;
            padding-bottom:28%;
        }
    </style>
}