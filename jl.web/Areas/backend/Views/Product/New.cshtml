@model JL.Core.Models.Product
@{
    ViewBag.Title = "新品上架";
}
@section styles{
    @Styles.Render("~/Content/bootstrap-datepicker/css/bootstrap-datepicker.css")
}
@section scripts{
    @Scripts.Render("~/Content/ueditor/ueditor.config.js")
    @Scripts.Render("~/Content/ueditor/ueditor.all.min.js")
    @Scripts.Render("~/Content/ueditor/lang/zh-cn/zh-cn.js")
    @Scripts.Render("~/Content/bootstrap-datepicker/js/bootstrap-datepicker.js")
    @Scripts.Render("~/Content/bootstrap-datepicker/locales/bootstrap-datepicker.zh-CN.min.js")

    <script type="text/javascript">
        var ue = UE.getEditor('Description');

        $('#datetimepicker').datepicker({
            language: 'zh-CN',
            autoclose: true,
            todayBtn: true,
            //pickerPosition: "bottom-left",
            todayHighlight:true
        });
    </script>
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">发布产品</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-10">
            <div class="panel panel-default">

                <div class="panel-heading">
                    @Html.TextBoxFor(a => a.Name, new { @class = "form-control", placeholder = "请输入产品名称" })
                </div>
                <div class="panel-body">
                    @Html.TextAreaFor(m => m.Description, new { Style = "Height:500px;" })
                </div>

            </div>
            <button type="submit" class="btn btn-success">发布</button>
        </div>
        <div class="col-lg-2">
            <div class="panel-body">
                <div class="form-group">
                    <label for="datetimepicker">发布日期</label>
                    <input type="text" name="pubtime" class="form-control" value="@DateTime.Now.Date.ToString("yyyy-MM-dd")" id="datetimepicker" data-date-format="yyyy-mm-dd">
                </div>

                <div class="form-group">
                    <label for="datetimepicker">类型</label>
                    <select class="form-control" name="Category">
                        <option value="S">心理软件产品</option>
                        <option value="H">心理硬件产品</option>
                        <option value="R">心理服务</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="datetimepicker">排序</label>

                    <input type="text" value="1" placeholder="请输入序号" name="Sort" id="Sort" data-val-required="Sort 字段是必需的。" data-val-number="字段 Sort 必须是一个数字。" data-val="true" class="input-validation-error form-control">
                </div>
            </div>
        </div>
    </div>
}


