    </div>

    <!-- jQuery -->
    @Scripts.Render("~/Content/jquery/jquery.js")
    @Scripts.Render("~/Content/bootstrap/js/bootstrap.js")
    @Scripts.Render("~/Content/metisMenu/metisMenu.js")
    @Scripts.Render("~/Content/sbadmin2/js/sb-admin-2.js")
    @RenderSection("scripts", required: false)
